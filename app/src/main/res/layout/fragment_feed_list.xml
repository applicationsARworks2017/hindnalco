<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="feedsdetails.com.adityabirla.Fragment.FeedList">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="5dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Amaresh Samantaray"
                       android:textColor="@color/colorPrimaryDark"
                       android:textSize="14dp"
                       android:textStyle="bold"
                       android:id="@+id/name"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="28.10.2017 04:05 PM"
                       android:id="@+id/time"
                       android:layout_below="@id/name"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@+id/time"
                       android:layout_marginTop="10dp"
                       android:textColor="@color/black"
                       android:id="@+id/contentheading"
                       android:text="Father Sacrificed 8-Year-Old Daughter, Reason Will Make Your Blood Boil"/>
                   <ImageView
                       android:layout_width="match_parent"
                       android:layout_height="200dp"
                       android:layout_marginTop="10dp"
                       android:background="@drawable/img1"
                       android:id="@+id/img"
                       android:layout_below="@id/contentheading"/>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:layout_below="@id/img"
                       android:layout_marginTop="5dp"
                       android:id="@+id/hlin"
                       android:orientation="horizontal"
                       android:background="@color/deep_background"></LinearLayout>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/hlin"
                       android:layout_marginTop="5dp"
                       android:layout_centerHorizontal="true">
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content">
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@mipmap/ic_thumb_up_black_24dp"
                               android:id="@+id/likeim"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_below="@id/likeim"
                               android:text="242"
                               android:textColor="@color/black"/>
                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="40dp">
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@mipmap/ic_mode_comment_black_24dp"
                               android:id="@+id/likeim1"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_below="@id/likeim1"
                               android:text="242"
                               android:textColor="@color/black"/>
                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_marginLeft="40dp"
                           android:layout_height="wrap_content">
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@mipmap/ic_share_black_24dp"
                               android:id="@+id/likeim2"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_below="@id/likeim2"
                               android:text="242"
                               android:textColor="@color/black"/>
                       </RelativeLayout>
                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_marginLeft="40dp"
                           android:layout_height="wrap_content">
                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:background="@mipmap/ic_file_download_black_24dp"
                               android:id="@+id/likeim3"/>
                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_below="@id/likeim3"
                               android:text="242"
                               android:textColor="@color/black"/>
                       </RelativeLayout>

                   </LinearLayout>

               </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>
    <!--<android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:src="@mipmap/ic_add_white_24dp"/>-->
    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/material_design_android_floating_action_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        fab:menu_animationDelayPerItem="55"
        fab:menu_backgroundColor="@android:color/transparent"
        fab:menu_buttonSpacing="0dp"
        fab:menu_colorNormal="#da4336"
        fab:menu_colorPressed="#da4336"
        fab:menu_colorRipple="#99d4d4d4"
        fab:menu_fab_size="normal"
        fab:menu_icon="@drawable/fab_add"
        fab:menu_labels_colorNormal="#333"
        fab:menu_labels_colorPressed="#444"
        fab:menu_labels_colorRipple="#66efecec"
        fab:menu_labels_cornerRadius="3dp"
        fab:menu_labels_ellipsize="none"
        fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
        fab:menu_labels_margin="0dp"
        fab:menu_labels_maxLines="-1"
        fab:menu_labels_padding="8dp"
        fab:menu_labels_position="left"
        fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
        fab:menu_labels_showShadow="true"
        fab:menu_labels_singleLine="false"
        fab:menu_labels_textColor="#f2f1f1"
        fab:menu_labels_textSize="15sp"
        fab:menu_openDirection="up"
        fab:menu_shadowColor="#66aff198"
        fab:menu_shadowRadius="4dp"
        fab:menu_shadowXOffset="1dp"
        fab:menu_shadowYOffset="4dp"
        fab:menu_showShadow="true">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/add_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_insert_drive_file_white_24dp"
            fab:menu_colorNormal="@color/white"
            fab:fab_label="Post Files"
            fab:fab_size="mini" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/add_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_video_library_white_24dp"
            fab:menu_colorNormal="@color/colorPrimary"
            fab:fab_label="Post Video"
            fab:fab_size="mini" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/add_images"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_photo_library_white_24dp"
            fab:menu_colorNormal="@color/colorPrimary"
            fab:fab_label="Post Image"
            fab:fab_size="mini" />

    </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>
</FrameLayout>
