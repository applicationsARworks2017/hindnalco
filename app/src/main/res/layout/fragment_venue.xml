<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="feedsdetails.com.adityabirla.Fragment.Venue">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2nd Metals Power Conference 2017"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Power through Innovation &amp; Collaboration"
                    android:textColor="@color/blue"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/lin_venue"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_location_on_black_24dp"
                        android:backgroundTint="@color/indigo"
                        />
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="Hindalco Hirakud Auditorium,R S Colony , Sambalpur, Odisha"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/indigo"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_keyboard_arrow_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:backgroundTint="@color/indigo"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    android:background="@color/indigo"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/lin_md"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_video_library_white_24dp"
                        android:backgroundTint="@color/btn_orange"
                        />
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="MD's Voice"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/btn_orange"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_keyboard_arrow_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:backgroundTint="@color/btn_orange"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    android:background="@color/btn_orange"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/lin_schedule"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_date_range_white_24dp"
                        android:backgroundTint="@color/indigo"
                        />
                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="23-25 Nov 2017, Hirakud"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/indigo"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_keyboard_arrow_right_black_24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="0dp"
                        android:backgroundTint="@color/indigo"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="vertical"
                    android:background="@color/indigo"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp">
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</FrameLayout>
